div.container.content
    a(ng-if="!sprint", href="/add-sprint") Add a sprint!

    div(ng-if="sprint")
        header.gm-sptint__header.row
            h1.col-md-6 Current Sprint
            div.col-md-6.gm-sprint__deadline.text-right
                p {{deadlineMessage.deadline}}
                p {{deadlineMessage.fromNow}}
        ul.list-unstyled.list-group
            li.list-group-item.row(ng-repeat="task in sprint.tasks")
                span.col-md-3.gm-sprint__task-name {{task.name}}
                ul.col-md-9.hours
                    li.gm-hours__item(ng-repeat="hour in task.plan track by $index", ng-class="{'gm-hours__item--done' : hour.added}", ng-click="addHour(hour, task)")
        div.standard-margin
            button.btn.gm-attention(ng-click="finishSprint()") Finish this sprint
            a.btn.btn-link(href="/edit-sprint") Edit this sprint