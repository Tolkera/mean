div.container(ng-controller="mvLoginCtrl")
    form.form-horizontal.gm-user-form(ng-hide="identity.isAuthenticated()")
        div.form-group
            label.col-lg-4.control-label(for="username") Username
            div.col-lg-8
                input.form-control(type="text", name="username", id="username", ng-model="username")
        div.form-group
            label.col-lg-4.control-label(for="username") Password
            div.col-lg-8
                input.form-control(type="password", name="password", id="password", ng-model="password")
        div.form-group
            button.btn.btn-block.gm-attention(type="submit", ng-click="login(username, password)") Log in

    div(ng-show="identity.isAuthenticated()")
        h1.message Welcome {{identity.currentUser.firstName}}!
        p.message There is not much to do around on this page, sadly.
        p.message Go create <a href="/tasks"> a new task </a> for yourself